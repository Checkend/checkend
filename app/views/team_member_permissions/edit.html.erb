<%= turbo_frame_tag "slide_over" do %>
  <div x-data="{ slideOverOpen: false }">
    <%= render "shared/slide_over", title: "Permissions", subtitle: @team_member.user.email_address do %>
      <%= form_with url: team_team_member_permissions_path(@team, @team_member), method: :patch, class: "flex-1 flex flex-col overflow-hidden" do |form| %>
        <div class="flex-1 overflow-y-auto px-4 py-6 sm:px-6">
          <%# Current Role Section %>
          <div class="mb-6">
            <h3 class="text-sm font-medium text-gray-900 dark:text-white mb-2">Current Role</h3>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= role_badge_class(@team_member.role) %>">
              <%= @team_member.role.capitalize %>
            </span>
          </div>

          <%# Role Permissions (read-only) %>
          <div class="mb-6">
            <h3 class="text-sm font-medium text-gray-900 dark:text-white mb-3">Role Permissions</h3>
            <p class="text-xs text-gray-500 dark:text-zinc-400 mb-3">These permissions are granted by the <%= @team_member.role.capitalize %> role.</p>
            <div class="bg-gray-50 dark:bg-zinc-800 rounded-lg p-4">
              <div class="grid grid-cols-1 gap-2">
                <% @permissions.group_by(&:resource).each do |resource, perms| %>
                  <div class="mb-3">
                    <h4 class="text-xs font-semibold text-gray-700 dark:text-zinc-300 uppercase tracking-wide mb-2"><%= resource.humanize %></h4>
                    <div class="flex flex-wrap gap-2">
                      <% perms.each do |perm| %>
                        <% has_permission = @role_permissions.include?(perm.id) %>
                        <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium <%= has_permission ? 'bg-emerald-100 text-emerald-800 dark:bg-emerald-500/20 dark:text-emerald-300' : 'bg-gray-200 text-gray-500 dark:bg-zinc-700 dark:text-zinc-500' %>">
                          <% if has_permission %>
                            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                          <% else %>
                            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                            </svg>
                          <% end %>
                          <%= perm.action %>
                        </span>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>

          <%# Grant Additional Permissions %>
          <div class="mb-6">
            <h3 class="text-sm font-medium text-gray-900 dark:text-white mb-3">Grant Additional Permissions</h3>
            <p class="text-xs text-gray-500 dark:text-zinc-400 mb-3">Grant permissions not included in the role.</p>
            <div class="space-y-3">
              <% @permissions.reject { |p| @role_permissions.include?(p.id) }.group_by(&:resource).each do |resource, perms| %>
                <div class="bg-gray-50 dark:bg-zinc-800 rounded-lg p-3">
                  <h4 class="text-xs font-semibold text-gray-700 dark:text-zinc-300 uppercase tracking-wide mb-2"><%= resource.humanize %></h4>
                  <div class="space-y-2">
                    <% perms.each do |perm| %>
                      <% existing_grant = @user_permissions.find { |up| up.permission_id == perm.id && up.grant? } %>
                      <div class="flex items-center justify-between">
                        <label class="flex items-center">
                          <input type="checkbox" name="grants[<%= perm.id %>]" value="1" <%= 'checked' if existing_grant %>
                                 class="rounded border-gray-300 dark:border-zinc-600 text-violet-600 focus:ring-violet-500 dark:bg-zinc-700">
                          <span class="ml-2 text-sm text-gray-700 dark:text-zinc-300"><%= perm.key %></span>
                        </label>
                        <select name="expirations[grant_<%= perm.id %>]"
                                class="text-xs px-2 py-1 bg-white dark:bg-zinc-900 border border-gray-300 dark:border-zinc-700 rounded text-gray-700 dark:text-zinc-300">
                          <option value="never" <%= 'selected' if existing_grant&.expires_at.nil? %>>Never expires</option>
                          <option value="1_day">1 day</option>
                          <option value="1_week">1 week</option>
                          <option value="1_month">1 month</option>
                          <option value="3_months">3 months</option>
                        </select>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
              <% if @permissions.reject { |p| @role_permissions.include?(p.id) }.empty? %>
                <p class="text-sm text-gray-500 dark:text-zinc-400 italic">This role already has all permissions.</p>
              <% end %>
            </div>
          </div>

          <%# Revoke Permissions %>
          <div class="mb-6">
            <h3 class="text-sm font-medium text-gray-900 dark:text-white mb-3">Revoke Permissions</h3>
            <p class="text-xs text-gray-500 dark:text-zinc-400 mb-3">Remove permissions that the role would normally grant.</p>
            <div class="space-y-3">
              <% @permissions.select { |p| @role_permissions.include?(p.id) }.group_by(&:resource).each do |resource, perms| %>
                <div class="bg-red-50 dark:bg-red-500/10 rounded-lg p-3">
                  <h4 class="text-xs font-semibold text-red-700 dark:text-red-400 uppercase tracking-wide mb-2"><%= resource.humanize %></h4>
                  <div class="space-y-2">
                    <% perms.each do |perm| %>
                      <% existing_revoke = @user_permissions.find { |up| up.permission_id == perm.id && up.revoke? } %>
                      <label class="flex items-center">
                        <input type="checkbox" name="revokes[<%= perm.id %>]" value="1" <%= 'checked' if existing_revoke %>
                               class="rounded border-red-300 dark:border-red-600 text-red-600 focus:ring-red-500 dark:bg-zinc-700">
                        <span class="ml-2 text-sm text-red-700 dark:text-red-400"><%= perm.key %></span>
                      </label>
                    <% end %>
                  </div>
                </div>
              <% end %>
              <% if @permissions.select { |p| @role_permissions.include?(p.id) }.empty? %>
                <p class="text-sm text-gray-500 dark:text-zinc-400 italic">This role has no permissions to revoke.</p>
              <% end %>
            </div>
          </div>

          <%# Current Overrides Summary %>
          <% if @user_permissions.any? %>
            <div class="mb-6">
              <h3 class="text-sm font-medium text-gray-900 dark:text-white mb-3">Current Overrides</h3>
              <div class="bg-amber-50 dark:bg-amber-500/10 rounded-lg p-3">
                <div class="space-y-2">
                  <% @user_permissions.each do |up| %>
                    <div class="flex items-center justify-between text-sm">
                      <span class="<%= up.grant? ? 'text-emerald-700 dark:text-emerald-400' : 'text-red-700 dark:text-red-400' %>">
                        <%= up.grant? ? '+' : '-' %> <%= up.permission.key %>
                      </span>
                      <% if up.expires_at %>
                        <span class="text-xs text-amber-600 dark:text-amber-400">
                          Expires <%= up.expires_at.strftime('%b %d, %Y') %>
                        </span>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <%# Footer %>
        <div class="flex-shrink-0 border-t border-gray-200 dark:border-zinc-700 px-4 py-4 sm:px-6">
          <div class="flex justify-end space-x-3">
            <%= link_to "Cancel", team_team_members_path(@team),
                class: "rounded-md bg-white dark:bg-zinc-800 px-3 py-2 text-sm font-semibold text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-zinc-600 hover:bg-gray-50 dark:hover:bg-zinc-700" %>
            <%= form.submit "Save Changes",
                class: "rounded-md bg-violet-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-violet-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-violet-600 cursor-pointer" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
