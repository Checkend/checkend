<%= turbo_frame_tag "slide_over" do %>
  <div x-data="{ slideOverOpen: false }">
    <%= render "shared/slide_over", title: "Permissions", subtitle: @team_member.user.email_address do %>
      <%= form_with url: team_team_member_permissions_path(@team, @team_member), method: :patch, class: "flex-1 flex flex-col overflow-hidden" do |form| %>
        <div class="flex-1 overflow-y-auto px-4 py-6 sm:px-6">
          <%# Current Role %>
          <div class="mb-6">
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500 dark:text-zinc-400">Role</span>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= role_badge_class(@team_member.role) %>">
                <%= @team_member.role.capitalize %>
              </span>
            </div>
            <p class="mt-1 text-xs text-gray-500 dark:text-zinc-400">
              Checkboxes show the effective permissions. Toggle to customize.
            </p>
          </div>

          <%# Permissions by Resource %>
          <% @permissions.group_by(&:resource).each do |resource, perms| %>
            <div class="mb-6">
              <h4 class="text-xs font-semibold text-gray-700 dark:text-zinc-300 uppercase tracking-wide mb-3">
                <%= resource.humanize %>
              </h4>
              <div class="space-y-2">
                <% perms.each do |perm| %>
                  <label class="flex items-center">
                    <input type="checkbox"
                           name="permissions[<%= perm.id %>]"
                           value="1"
                           <%= 'checked' if effective_permission?(perm) %>
                           class="rounded border-gray-300 dark:border-zinc-600 text-violet-600 focus:ring-violet-500 dark:bg-zinc-700">
                    <span class="ml-3 text-sm text-gray-700 dark:text-zinc-300"><%= perm.action.humanize %></span>
                  </label>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <%# Footer %>
        <div class="flex-shrink-0 border-t border-gray-200 dark:border-zinc-700 px-4 py-4 sm:px-6">
          <div class="flex justify-end space-x-3">
            <%= link_to "Cancel", team_team_members_path(@team),
                class: "rounded-md bg-white dark:bg-zinc-800 px-3 py-2 text-sm font-semibold text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-zinc-600 hover:bg-gray-50 dark:hover:bg-zinc-700" %>
            <%= form.submit "Save Changes",
                class: "rounded-md bg-violet-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-violet-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-violet-600 cursor-pointer" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
