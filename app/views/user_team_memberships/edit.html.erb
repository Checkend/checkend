<%= turbo_frame_tag "slide_over" do %>
  <div x-data="{ slideOverOpen: false }">
    <%= render "shared/slide_over", title: "Team Memberships", subtitle: @user.email_address do %>
      <%= form_with url: user_team_memberships_path(@user), method: :patch, class: "flex-1 flex flex-col overflow-hidden" do |form| %>
        <div class="flex-1 overflow-y-auto px-4 py-6 sm:px-6">
          <%# Info Banner %>
          <div class="mb-6 bg-violet-50 dark:bg-violet-500/10 rounded-lg p-4">
            <div class="flex">
              <svg class="w-5 h-5 text-violet-600 dark:text-violet-400 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <p class="text-sm text-violet-700 dark:text-violet-300">
                Select teams and assign roles for this user.
              </p>
            </div>
          </div>

          <%# Teams List %>
          <div class="space-y-3">
            <% if @teams.any? %>
              <% @teams.each do |team| %>
                <% is_member = @user_team_ids.include?(team.id) %>
                <% current_role = @user.team_members.find_by(team: team)&.role || 'member' %>
                <div class="bg-gray-50 dark:bg-zinc-800/50 rounded-lg border border-gray-200 dark:border-zinc-700 p-4"
                     x-data="{ selected: <%= is_member %> }">
                  <div class="flex items-center justify-between">
                    <label class="flex items-center gap-3 cursor-pointer flex-1">
                      <div class="flex h-6 shrink-0 items-center">
                        <div class="group grid size-4 grid-cols-1">
                          <input type="checkbox"
                                 name="team_ids[]"
                                 value="<%= team.id %>"
                                 x-model="selected"
                                 <%= 'checked' if is_member %>
                                 class="col-start-1 row-start-1 appearance-none rounded border border-zinc-600 bg-zinc-700 checked:border-violet-500 checked:bg-violet-500 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:ring-offset-2 focus:ring-offset-zinc-900">
                          <svg class="pointer-events-none col-start-1 row-start-1 size-3.5 self-center justify-self-center stroke-white group-has-[:disabled]:stroke-zinc-500" viewBox="0 0 14 14" fill="none">
                            <path class="opacity-0 group-has-[:checked]:opacity-100" d="M3 8L6 11L11 3.5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                          </svg>
                        </div>
                      </div>
                      <div>
                        <span class="block text-sm font-medium text-white"><%= team.name %></span>
                        <span class="block text-xs text-zinc-400 mt-0.5">
                          <%= team.team_members.count %> member<%= team.team_members.count == 1 ? '' : 's' %>
                          <% if team.owner %>
                            &bull; Owner: <%= team.owner.email_address %>
                          <% end %>
                        </span>
                      </div>
                    </label>
                    <div x-show="selected" x-cloak class="ml-4">
                      <select name="roles[<%= team.id %>]"
                              class="text-sm px-2 py-1 bg-white dark:bg-zinc-800 border border-gray-300 dark:border-zinc-600 rounded-md text-gray-900 dark:text-white focus:ring-violet-500 focus:border-violet-500">
                        <option value="member" <%= 'selected' if current_role == 'member' %>>Member</option>
                        <option value="admin" <%= 'selected' if current_role == 'admin' %>>Admin</option>
                        <option value="owner" <%= 'selected' if current_role == 'owner' %>>Owner</option>
                      </select>
                    </div>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="text-center py-8">
                <div class="w-12 h-12 bg-gray-100 dark:bg-zinc-700 rounded-full flex items-center justify-center mx-auto mb-3">
                  <svg class="w-6 h-6 text-gray-400 dark:text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <p class="text-sm text-gray-600 dark:text-zinc-400">No teams available.</p>
              </div>
            <% end %>
          </div>
        </div>

        <%# Footer %>
        <div class="flex-shrink-0 border-t border-gray-200 dark:border-zinc-700 px-4 py-4 sm:px-6">
          <div class="flex justify-end space-x-3">
            <%= link_to "Cancel", @user,
                class: "rounded-md bg-white dark:bg-zinc-800 px-3 py-2 text-sm font-semibold text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-zinc-600 hover:bg-gray-50 dark:hover:bg-zinc-700" %>
            <%= form.submit "Save Changes",
                class: "rounded-md bg-violet-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-violet-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-violet-600 cursor-pointer" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
