<h1 class="text-xl font-semibold text-white mb-6">Sign in to your account</h1>

<%= form_with url: session_url, class: "space-y-5" do |form| %>
  <div>
    <%= form.label :email_address, "Email address", class: "block text-sm font-medium text-zinc-300 mb-1.5" %>
    <div class="relative">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <svg class="w-5 h-5 text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path></svg>
      </div>
      <%= form.email_field :email_address,
          required: true,
          autofocus: true,
          autocomplete: "username",
          placeholder: "you@example.com",
          value: params[:email_address],
          class: "block w-full pl-10 pr-3 py-2 bg-zinc-900 border border-zinc-700 rounded text-white placeholder-zinc-500 focus:outline-none focus:border-violet-500 focus:ring-1 focus:ring-violet-500 transition-colors" %>
    </div>
  </div>

  <div>
    <%= form.label :password, "Password", class: "block text-sm font-medium text-zinc-300 mb-1.5" %>
    <div class="relative">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <svg class="w-5 h-5 text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path></svg>
      </div>
      <%= form.password_field :password,
          required: true,
          autocomplete: "current-password",
          placeholder: "Enter your password",
          maxlength: 72,
          class: "block w-full pl-10 pr-3 py-2 bg-zinc-900 border border-zinc-700 rounded text-white placeholder-zinc-500 focus:outline-none focus:border-violet-500 focus:ring-1 focus:ring-violet-500 transition-colors" %>
    </div>
  </div>

  <div class="flex items-center justify-between pt-2">
    <%= form.submit "Sign in",
        class: "px-4 py-1.5 bg-violet-600 text-white rounded font-medium hover:bg-violet-500 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:ring-offset-2 focus:ring-offset-zinc-800 transition-colors" %>

    <%= link_to "Forgot password?", new_password_path, class: "text-sm text-zinc-400 hover:text-violet-400 transition-colors" %>
  </div>
<% end %>
