<div>
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Edit User</h1>
      <p class="text-gray-600 dark:text-zinc-400 mt-1">Update user information and permissions.</p>
    </div>
    <%= link_to user_path(@user), class: "inline-flex items-center text-sm text-gray-600 dark:text-zinc-400 hover:text-gray-900 dark:hover:text-zinc-300" do %>
      Cancel
    <% end %>
  </div>

  <div class="bg-white dark:bg-zinc-800 shadow dark:shadow-zinc-700/50 rounded-lg border border-transparent dark:border-zinc-700 p-6">
    <%= render "form", user: @user %>
  </div>
</div>

