<div>
  <%# Header %>
  <div class="mb-6">
    <div class="flex justify-between items-start">
      <div class="flex items-center space-x-4">
        <div class="w-14 h-14 <%= @problem.resolved? ? 'bg-emerald-100 dark:bg-emerald-500/20' : 'bg-pink-100 dark:bg-pink-500/20' %> rounded-xl flex items-center justify-center">
          <% if @problem.resolved? %>
            <svg class="w-7 h-7 text-emerald-600 dark:text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          <% else %>
            <svg class="w-7 h-7 text-pink-600 dark:text-pink-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
          <% end %>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-gray-900 dark:text-white"><%= @problem.error_class %></h1>
          <p class="text-gray-600 dark:text-zinc-400 mt-1"><%= @problem.error_message %></p>
        </div>
      </div>
      <%# Status toggle button %>
      <div>
        <% if @problem.unresolved? %>
          <%= button_to resolve_app_problem_path(@app, @problem), method: :post, class: "inline-flex items-center px-4 py-2 bg-emerald-600 text-white rounded-lg font-medium hover:bg-emerald-500 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 dark:focus:ring-offset-zinc-900 transition-colors" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            Mark as Resolved
          <% end %>
        <% else %>
          <%= button_to unresolve_app_problem_path(@app, @problem), method: :post, class: "inline-flex items-center px-4 py-2 bg-pink-600 text-white rounded-lg font-medium hover:bg-pink-500 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:ring-offset-2 dark:focus:ring-offset-zinc-900 transition-colors" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
            Mark as Unresolved
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <%# Tags Section %>
  <div class="mb-6" data-controller="tags" data-tags-url-value="<%= app_problem_tags_path(@app, @problem) %>">
    <div class="flex items-center flex-wrap gap-2">
      <span class="text-sm font-medium text-gray-700 dark:text-zinc-300">Tags:</span>
      <div class="flex items-center flex-wrap gap-2" data-tags-target="list">
        <% @problem.tags.each do |tag| %>
          <span class="inline-flex items-center px-2.5 py-1 rounded-md text-sm font-medium bg-violet-100 dark:bg-violet-500/20 text-violet-700 dark:text-violet-300 group" data-tag-id="<%= tag.id %>">
            <%= tag.name %>
            <button type="button" data-action="tags#remove" data-tag-id="<%= tag.id %>" class="ml-1.5 text-violet-500 dark:text-violet-400 hover:text-violet-700 dark:hover:text-violet-200 focus:outline-none">
              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </span>
        <% end %>
      </div>
      <div class="relative" data-tags-target="inputWrapper">
        <input
          type="text"
          data-tags-target="input"
          data-action="input->tags#search keydown->tags#keydown"
          placeholder="Add tag..."
          class="px-3 py-1 text-sm rounded-md border border-gray-300 dark:border-zinc-600 bg-white dark:bg-zinc-800 text-gray-900 dark:text-zinc-100 placeholder-gray-400 dark:placeholder-zinc-500 focus:outline-none focus:ring-1 focus:ring-violet-500 focus:border-violet-500 w-32"
        >
        <div data-tags-target="suggestions" class="hidden absolute z-10 mt-1 w-48 bg-white dark:bg-zinc-800 rounded-md shadow-lg border border-gray-200 dark:border-zinc-700 max-h-48 overflow-auto">
        </div>
      </div>
    </div>
  </div>

  <%# Stats Overview %>
  <div class="grid grid-cols-4 gap-4 mb-8">
    <div class="bg-white dark:bg-zinc-800 shadow dark:shadow-zinc-700/50 rounded-lg border border-transparent dark:border-zinc-700 p-4">
      <div class="text-sm text-gray-500 dark:text-zinc-400 mb-1">Status</div>
      <div class="flex items-center space-x-2">
        <% if @problem.resolved? %>
          <span class="w-2 h-2 rounded-full bg-emerald-500"></span>
          <span class="text-lg font-semibold text-emerald-600 dark:text-emerald-400">Resolved</span>
        <% else %>
          <span class="w-2 h-2 rounded-full bg-pink-500"></span>
          <span class="text-lg font-semibold text-pink-600 dark:text-pink-400">Unresolved</span>
        <% end %>
      </div>
    </div>
    <div class="bg-white dark:bg-zinc-800 shadow dark:shadow-zinc-700/50 rounded-lg border border-transparent dark:border-zinc-700 p-4">
      <div class="text-sm text-gray-500 dark:text-zinc-400 mb-1">Total Notices</div>
      <div class="text-2xl font-bold text-gray-900 dark:text-white"><%= @problem.notices_count %></div>
    </div>
    <div class="bg-white dark:bg-zinc-800 shadow dark:shadow-zinc-700/50 rounded-lg border border-transparent dark:border-zinc-700 p-4">
      <div class="text-sm text-gray-500 dark:text-zinc-400 mb-1">First Seen</div>
      <div class="text-lg font-semibold text-gray-900 dark:text-white"><%= time_ago_in_words(@problem.first_noticed_at) %> ago</div>
    </div>
    <div class="bg-white dark:bg-zinc-800 shadow dark:shadow-zinc-700/50 rounded-lg border border-transparent dark:border-zinc-700 p-4">
      <div class="text-sm text-gray-500 dark:text-zinc-400 mb-1">Last Seen</div>
      <div class="text-lg font-semibold text-gray-900 dark:text-white"><%= time_ago_in_words(@problem.last_noticed_at) %> ago</div>
    </div>
  </div>

  <%# Occurrence Chart %>
  <%= render "problems/occurrence_chart", problem: @problem %>

  <%# Recent Notices %>
  <div class="bg-white dark:bg-zinc-800 shadow dark:shadow-zinc-700/50 rounded-lg border border-transparent dark:border-zinc-700 overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 dark:border-zinc-700">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Recent Notices</h2>
    </div>
    <% recent_notices = @problem.notices.includes(:backtrace).order(occurred_at: :desc).limit(10) %>
    <% if recent_notices.any? %>
      <ul class="divide-y divide-gray-200 dark:divide-zinc-700">
        <% recent_notices.each do |notice| %>
          <li>
            <%= link_to app_problem_notice_path(@app, @problem, notice), class: "block px-6 py-4 hover:bg-gray-50 dark:hover:bg-zinc-700/50 transition-colors" do %>
              <div class="flex items-center justify-between">
                <div class="min-w-0 flex-1">
                  <div class="flex items-center space-x-3">
                    <span class="text-sm font-medium text-gray-900 dark:text-white">
                      <%= notice.occurred_at.strftime("%b %d, %Y %I:%M %p") %>
                    </span>
                    <% if notice.request['method'].present? %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-bold uppercase
                        <% case notice.request['method'].to_s.upcase
                           when 'GET' %>bg-emerald-100 dark:bg-emerald-500/20 text-emerald-700 dark:text-emerald-400<%
                           when 'POST' %>bg-blue-100 dark:bg-blue-500/20 text-blue-700 dark:text-blue-400<%
                           when 'PUT', 'PATCH' %>bg-amber-100 dark:bg-amber-500/20 text-amber-700 dark:text-amber-400<%
                           when 'DELETE' %>bg-red-100 dark:bg-red-500/20 text-red-700 dark:text-red-400<%
                           else %>bg-gray-100 dark:bg-zinc-700 text-gray-700 dark:text-zinc-300<%
                           end %>">
                        <%= notice.request['method'].to_s.upcase %>
                      </span>
                    <% end %>
                    <% if notice.user_info['email'].present? || notice.user_info['id'].present? %>
                      <span class="inline-flex items-center text-xs text-gray-500 dark:text-zinc-400">
                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        <%= notice.user_info['email'] || "User ##{notice.user_info['id']}" %>
                      </span>
                    <% end %>
                  </div>
                  <% if notice.request['url'].present? %>
                    <div class="text-sm text-gray-600 dark:text-zinc-400 mt-1 truncate font-mono">
                      <%= notice.request['url'] %>
                    </div>
                  <% end %>
                </div>
                <svg class="w-5 h-5 text-gray-400 dark:text-zinc-500 flex-shrink-0 ml-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="px-6 py-12 text-center">
        <div class="w-12 h-12 bg-gray-100 dark:bg-zinc-700 rounded-full flex items-center justify-center mx-auto mb-3">
          <svg class="w-6 h-6 text-gray-400 dark:text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <h3 class="text-base font-medium text-gray-900 dark:text-white mb-1">No notices recorded</h3>
        <p class="text-sm text-gray-600 dark:text-zinc-400">Individual error occurrences will appear here.</p>
      </div>
    <% end %>
  </div>
</div>
