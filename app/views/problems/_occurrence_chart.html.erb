<%# Occurrence Chart %>
<div class="bg-white dark:bg-zinc-800 shadow dark:shadow-zinc-700/50 rounded-lg border border-transparent dark:border-zinc-700 overflow-hidden mb-8">
  <div class="px-6 py-4 border-b border-gray-200 dark:border-zinc-700">
    <div class="flex items-center justify-between">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Error Occurrences</h2>
      <span class="text-sm text-gray-500 dark:text-zinc-400">Last 30 days</span>
    </div>
  </div>

  <div class="p-6">
    <% chart_data = problem.occurrence_chart_data %>
    <% if chart_data.values.any?(&:positive?) %>
      <%# Summary stats %>
      <div class="flex items-center gap-6 mb-4 text-sm">
        <div>
          <span class="text-gray-500 dark:text-zinc-400">Total: </span>
          <span class="font-semibold text-gray-900 dark:text-white"><%= chart_data.values.sum %></span>
        </div>
        <div>
          <span class="text-gray-500 dark:text-zinc-400">Peak: </span>
          <span class="font-semibold text-gray-900 dark:text-white"><%= chart_data.values.max %></span>
        </div>
        <div>
          <span class="text-gray-500 dark:text-zinc-400">Avg: </span>
          <span class="font-semibold text-gray-900 dark:text-white"><%= (chart_data.values.sum.to_f / chart_data.size).round(1) %>/day</span>
        </div>
      </div>

      <%# Area Chart %>
      <%= area_chart chart_data,
        height: "120px",
        colors: ["#7c3aed"],
        library: {
          backgroundColor: "transparent",
          plugins: {
            legend: { display: false }
          },
          scales: {
            x: {
              ticks: { color: "#a1a1aa", maxTicksLimit: 7 },
              grid: { color: "#3f3f46", drawBorder: false }
            },
            y: {
              ticks: { color: "#a1a1aa", precision: 0 },
              grid: { color: "#3f3f46", drawBorder: false },
              beginAtZero: true
            }
          },
          elements: {
            line: { tension: 0.3 },
            point: { radius: 0, hoverRadius: 4 }
          }
        } %>
    <% else %>
      <div class="text-center py-8">
        <div class="w-12 h-12 bg-gray-100 dark:bg-zinc-700 rounded-full flex items-center justify-center mx-auto mb-3">
          <svg class="w-6 h-6 text-gray-400 dark:text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
        <h3 class="text-base font-medium text-gray-900 dark:text-white mb-1">No recent activity</h3>
        <p class="text-sm text-gray-600 dark:text-zinc-400">No error occurrences in the last 30 days.</p>
      </div>
    <% end %>
  </div>
</div>
