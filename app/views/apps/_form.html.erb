<%= form_with model: app, data: { turbo_frame: "_top" }, class: "flex flex-col h-full" do |form| %>
  <%# Scrollable form content %>
  <div class="flex-1 overflow-y-auto px-4 py-6 sm:px-6 space-y-6">
    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-700 dark:text-zinc-300 mb-1.5" %>
      <%= form.text_field :name,
          required: true,
          autofocus: true,
          placeholder: "My Rails App",
          class: "block w-full px-3 py-2 bg-white dark:bg-zinc-900 border rounded-lg text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-zinc-500 focus:outline-none focus:ring-1 transition-colors #{form.has_error_on(:name) ? 'border-pink-500 focus:border-pink-500 focus:ring-pink-500' : 'border-gray-300 dark:border-zinc-700 focus:border-violet-500 focus:ring-violet-500'}" %>
      <%= form.errors_on(:name) %>
    </div>

    <div>
      <%= form.label :environment, class: "block text-sm font-medium text-gray-700 dark:text-zinc-300 mb-1.5" %>
      <div class="relative">
        <%= form.select :environment,
            options_for_select([["Production", "production"], ["Staging", "staging"], ["Development", "development"]], app.environment),
            { include_blank: "Select environment (optional)" },
            class: "appearance-none block w-full px-3 py-2 pr-9 bg-white dark:bg-zinc-900 border rounded-lg text-gray-900 dark:text-white focus:outline-none focus:ring-1 transition-colors #{form.has_error_on(:environment) ? 'border-pink-500 focus:border-pink-500 focus:ring-pink-500' : 'border-gray-300 dark:border-zinc-700 focus:border-violet-500 focus:ring-violet-500'}" %>
        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
          <svg class="h-4 w-4 text-gray-400 dark:text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </div>
      </div>
      <%= form.errors_on(:environment) %>
      <% unless form.has_error_on(:environment) %>
        <p class="mt-1 text-sm text-gray-500 dark:text-zinc-500">Optional. Helps organize apps by deployment environment.</p>
      <% end %>
    </div>

    <%# Notification Settings %>
    <div class="border-t border-gray-200 dark:border-zinc-700 pt-6">
      <h3 class="text-sm font-medium text-gray-900 dark:text-white mb-4">Email Notifications</h3>

      <div class="space-y-4">
        <div class="flex items-start">
          <%= form.check_box :notify_on_new_problem,
              class: "h-4 w-4 rounded border-gray-300 dark:border-zinc-600 text-violet-600 focus:ring-violet-500 dark:bg-zinc-900 dark:checked:bg-violet-600 mt-0.5" %>
          <div class="ml-3">
            <%= form.label :notify_on_new_problem, "New errors", class: "text-sm font-medium text-gray-700 dark:text-zinc-300" %>
            <p class="text-sm text-gray-500 dark:text-zinc-500">Get notified when a new error type is detected.</p>
          </div>
        </div>

        <div class="flex items-start">
          <%= form.check_box :notify_on_reoccurrence,
              class: "h-4 w-4 rounded border-gray-300 dark:border-zinc-600 text-violet-600 focus:ring-violet-500 dark:bg-zinc-900 dark:checked:bg-violet-600 mt-0.5" %>
          <div class="ml-3">
            <%= form.label :notify_on_reoccurrence, "Reoccurring errors", class: "text-sm font-medium text-gray-700 dark:text-zinc-300" %>
            <p class="text-sm text-gray-500 dark:text-zinc-500">Get notified when a resolved error occurs again.</p>
          </div>
        </div>
      </div>
    </div>

    <%# Slack Integration %>
    <div class="border-t border-gray-200 dark:border-zinc-700 pt-6">
      <h3 class="text-sm font-medium text-gray-900 dark:text-white mb-4">Slack Integration</h3>

      <div>
        <%= form.label :slack_webhook_url, "Slack Webhook URL", class: "block text-sm font-medium text-gray-700 dark:text-zinc-300 mb-1.5" %>
        <%= form.password_field :slack_webhook_url,
            placeholder: "https://hooks.slack.com/services/...",
            class: "block w-full px-3 py-2 bg-white dark:bg-zinc-900 border rounded-lg text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-zinc-500 focus:outline-none focus:ring-1 transition-colors #{form.has_error_on(:slack_webhook_url) ? 'border-pink-500 focus:border-pink-500 focus:ring-pink-500' : 'border-gray-300 dark:border-zinc-700 focus:border-violet-500 focus:ring-violet-500'}" %>
        <%= form.errors_on(:slack_webhook_url) %>
        <% unless form.has_error_on(:slack_webhook_url) %>
          <p class="mt-1 text-sm text-gray-500 dark:text-zinc-500">
            Optional. Receive error notifications in Slack.
            <a href="https://api.slack.com/messaging/webhooks" target="_blank" class="text-violet-600 dark:text-violet-400 hover:underline">Create a webhook</a>
          </p>
        <% end %>
      </div>
    </div>

    <%# Discord Integration %>
    <div class="border-t border-gray-200 dark:border-zinc-700 pt-6">
      <h3 class="text-sm font-medium text-gray-900 dark:text-white mb-4">Discord Integration</h3>

      <div>
        <%= form.label :discord_webhook_url, "Discord Webhook URL", class: "block text-sm font-medium text-gray-700 dark:text-zinc-300 mb-1.5" %>
        <%= form.password_field :discord_webhook_url,
            placeholder: "https://discord.com/api/webhooks/...",
            class: "block w-full px-3 py-2 bg-white dark:bg-zinc-900 border rounded-lg text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-zinc-500 focus:outline-none focus:ring-1 transition-colors #{form.has_error_on(:discord_webhook_url) ? 'border-pink-500 focus:border-pink-500 focus:ring-pink-500' : 'border-gray-300 dark:border-zinc-700 focus:border-violet-500 focus:ring-violet-500'}" %>
        <%= form.errors_on(:discord_webhook_url) %>
        <% unless form.has_error_on(:discord_webhook_url) %>
          <p class="mt-1 text-sm text-gray-500 dark:text-zinc-500">
            Optional. Receive error notifications in Discord with rich embeds.
            <a href="https://support.discord.com/hc/en-us/articles/228383668-Intro-to-Webhooks" target="_blank" class="text-violet-600 dark:text-violet-400 hover:underline">Create a webhook</a>
          </p>
        <% end %>
      </div>
    </div>

    <%# Generic Webhook Integration %>
    <div class="border-t border-gray-200 dark:border-zinc-700 pt-6">
      <h3 class="text-sm font-medium text-gray-900 dark:text-white mb-4">Generic Webhook</h3>

      <div>
        <%= form.label :webhook_url, "Webhook URL", class: "block text-sm font-medium text-gray-700 dark:text-zinc-300 mb-1.5" %>
        <%= form.password_field :webhook_url,
            placeholder: "https://your-server.com/webhooks/errors",
            class: "block w-full px-3 py-2 bg-white dark:bg-zinc-900 border rounded-lg text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-zinc-500 focus:outline-none focus:ring-1 transition-colors #{form.has_error_on(:webhook_url) ? 'border-pink-500 focus:border-pink-500 focus:ring-pink-500' : 'border-gray-300 dark:border-zinc-700 focus:border-violet-500 focus:ring-violet-500'}" %>
        <%= form.errors_on(:webhook_url) %>
        <% unless form.has_error_on(:webhook_url) %>
          <p class="mt-1 text-sm text-gray-500 dark:text-zinc-500">
            Optional. Send error notifications to any HTTP endpoint via POST request with JSON payload.
          </p>
        <% end %>
      </div>
    </div>
  </div>

  <%# Sticky footer with action buttons %>
  <div class="flex-shrink-0 flex items-center justify-end space-x-3 px-4 py-4 sm:px-6 border-t border-gray-200 dark:border-zinc-700 bg-gray-50 dark:bg-zinc-800/50">
    <button type="button"
            @click="slideOverOpen = false"
            class="px-4 py-2 text-gray-700 dark:text-zinc-300 hover:text-gray-900 dark:hover:text-white font-medium transition-colors">
      Cancel
    </button>
    <%= form.submit class: "px-4 py-2 bg-violet-600 text-white rounded-lg font-medium hover:bg-violet-500 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:ring-offset-2 dark:focus:ring-offset-zinc-900 transition-colors cursor-pointer" %>
  </div>
<% end %>
