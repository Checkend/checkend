<div>
  <%# Header %>
  <div class="flex justify-between items-start mb-8">
    <div class="flex items-center space-x-4">
      <div class="w-14 h-14 bg-violet-100 dark:bg-violet-500/20 rounded-xl flex items-center justify-center">
        <svg class="w-7 h-7 text-violet-600 dark:text-violet-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
        </svg>
      </div>
      <div>
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white"><%= @app.name %></h1>
        <% if @app.environment.present? %>
          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 dark:bg-zinc-700 text-gray-600 dark:text-zinc-400 mt-1">
            <%= @app.environment %>
          </span>
        <% end %>
      </div>
    </div>
    <%# Actions dropdown %>
    <div x-data="{ open: false }" class="relative">
      <button
        @click="open = !open"
        @click.outside="open = false"
        class="p-2 rounded-lg text-gray-500 dark:text-zinc-400 hover:bg-gray-100 dark:hover:bg-zinc-800 hover:text-gray-700 dark:hover:text-zinc-300 focus:outline-none focus:ring-2 focus:ring-violet-500 transition-colors"
      >
        <span class="sr-only">Open menu</span>
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z" />
        </svg>
      </button>

      <div
        x-show="open"
        x-transition:enter="transition ease-out duration-100"
        x-transition:enter-start="transform opacity-0 scale-95"
        x-transition:enter-end="transform opacity-100 scale-100"
        x-transition:leave="transition ease-in duration-75"
        x-transition:leave-start="transform opacity-100 scale-100"
        x-transition:leave-end="transform opacity-0 scale-95"
        class="absolute right-0 mt-2 w-48 bg-white dark:bg-zinc-800 rounded-lg shadow-lg dark:shadow-zinc-900/50 border border-gray-200 dark:border-zinc-700 py-1 z-10"
        style="display: none;"
      >
        <%= link_to edit_app_path(@app), data: { turbo_frame: "modal" }, class: "flex items-center px-4 py-2 text-sm text-gray-700 dark:text-zinc-300 hover:bg-gray-100 dark:hover:bg-zinc-700 transition-colors" do %>
          <svg class="w-4 h-4 mr-3 text-gray-400 dark:text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit
        <% end %>
        <div class="border-t border-gray-100 dark:border-zinc-700 my-1"></div>
        <%= button_to app_path(@app), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this app? This will also delete all associated problems and notices." }, class: "flex items-center w-full px-4 py-2 text-sm text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-500/10 transition-colors" do %>
          <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <%# API Key Section %>
  <div class="bg-white dark:bg-zinc-800 shadow dark:shadow-zinc-700/50 rounded-lg border border-transparent dark:border-zinc-700 p-6 mb-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white">API Key</h2>
      <%= button_to regenerate_api_key_app_path(@app), method: :post, data: { turbo_confirm: "Are you sure you want to regenerate the API key? The old key will stop working immediately." }, class: "text-sm text-violet-600 dark:text-violet-400 hover:text-violet-700 dark:hover:text-violet-300 font-medium transition-colors" do %>
        Regenerate
      <% end %>
    </div>
    <p class="text-sm text-gray-600 dark:text-zinc-400 mb-4">Use this key in your application's error reporting client.</p>
    <div x-data="{ copied: false }" class="flex items-center space-x-2">
      <code class="flex-1 px-4 py-3 bg-gray-100 dark:bg-zinc-900 rounded-lg text-sm font-mono text-gray-800 dark:text-zinc-300 select-all overflow-x-auto"><%= @app.api_key %></code>
      <button
        @click="navigator.clipboard.writeText('<%= @app.api_key %>'); copied = true; setTimeout(() => copied = false, 2000)"
        class="flex-shrink-0 p-3 bg-gray-100 dark:bg-zinc-900 rounded-lg text-gray-600 dark:text-zinc-400 hover:text-violet-600 dark:hover:text-violet-400 hover:bg-gray-200 dark:hover:bg-zinc-700 focus:outline-none focus:ring-2 focus:ring-violet-500 transition-colors"
        title="Copy to clipboard"
      >
        <svg x-show="!copied" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
        </svg>
        <svg x-show="copied" x-cloak class="w-5 h-5 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      </button>
    </div>
  </div>

  <%# Teams Section %>
  <div class="bg-white dark:bg-zinc-800 shadow dark:shadow-zinc-700/50 rounded-lg border border-transparent dark:border-zinc-700 p-6 mb-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Teams</h2>
      <% admin_teams = Current.user.teams.joins(:team_members).where(team_members: { user_id: Current.user.id, role: 'admin' }).distinct %>
      <% if admin_teams.any? %>
        <%= form_with url: assign_team_app_path(@app), method: :post, class: "inline-flex items-center space-x-2" do |form| %>
          <%= form.select :team_id,
              options_from_collection_for_select(admin_teams, :id, :name),
              { include_blank: "Assign team..." },
              { name: 'team_id', class: "text-sm px-3 py-1.5 bg-white dark:bg-zinc-900 border border-gray-300 dark:border-zinc-700 rounded-lg text-gray-900 dark:text-white focus:outline-none focus:ring-1 focus:border-violet-500 focus:ring-violet-500" } %>
          <%= form.submit "Assign", class: "text-sm px-3 py-1.5 bg-violet-600 text-white rounded-lg font-medium hover:bg-violet-500 focus:outline-none focus:ring-2 focus:ring-violet-500 transition-colors cursor-pointer" %>
        <% end %>
      <% end %>
    </div>
    <% if @app.teams.any? %>
      <div class="space-y-2">
        <% @app.teams.each do |team| %>
          <div class="flex items-center justify-between p-3 rounded-lg border border-gray-200 dark:border-zinc-700">
            <div class="flex items-center space-x-3">
              <div class="flex-shrink-0 w-8 h-8 bg-violet-100 dark:bg-violet-500/20 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 text-violet-600 dark:text-violet-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <div>
                <p class="text-sm font-medium text-gray-900 dark:text-white"><%= team.name %></p>
                <p class="text-xs text-gray-500 dark:text-zinc-400"><%= team.team_members.count %> member(s)</p>
              </div>
            </div>
            <% if Current.user.admin_of_team?(team) %>
              <%= button_to remove_team_assignment_app_path(@app, team_id: team.id), method: :delete, data: { turbo_confirm: "Remove this team from the app?" }, class: "text-sm text-red-600 dark:text-red-400 hover:text-red-700 dark:hover:text-red-300 font-medium transition-colors" do %>
                Remove
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-sm text-gray-500 dark:text-zinc-400">No teams assigned to this app yet.</p>
    <% end %>
  </div>

  <%# Notification Settings %>
  <div class="bg-white dark:bg-zinc-800 shadow dark:shadow-zinc-700/50 rounded-lg border border-transparent dark:border-zinc-700 p-6 mb-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Notifications</h2>
      <%= link_to edit_app_path(@app), data: { turbo_frame: "modal" }, class: "text-sm text-violet-600 dark:text-violet-400 hover:text-violet-700 dark:hover:text-violet-300 font-medium transition-colors" do %>
        Edit
      <% end %>
    </div>
    <div class="flex flex-wrap gap-3">
      <div class="flex items-center space-x-2">
        <% if @app.notify_on_new_problem? %>
          <span class="flex-shrink-0 w-2 h-2 rounded-full bg-emerald-500"></span>
          <span class="text-sm text-gray-700 dark:text-zinc-300">New errors</span>
        <% else %>
          <span class="flex-shrink-0 w-2 h-2 rounded-full bg-gray-300 dark:bg-zinc-600"></span>
          <span class="text-sm text-gray-500 dark:text-zinc-500">New errors</span>
        <% end %>
      </div>
      <div class="flex items-center space-x-2">
        <% if @app.notify_on_reoccurrence? %>
          <span class="flex-shrink-0 w-2 h-2 rounded-full bg-emerald-500"></span>
          <span class="text-sm text-gray-700 dark:text-zinc-300">Reoccurring errors</span>
        <% else %>
          <span class="flex-shrink-0 w-2 h-2 rounded-full bg-gray-300 dark:bg-zinc-600"></span>
          <span class="text-sm text-gray-500 dark:text-zinc-500">Reoccurring errors</span>
        <% end %>
      </div>
    </div>
  </div>

  <%# Stats Overview %>
  <div class="grid grid-cols-3 gap-4 mb-8">
    <div class="bg-white dark:bg-zinc-800 shadow dark:shadow-zinc-700/50 rounded-lg border border-transparent dark:border-zinc-700 p-4">
      <div class="text-sm text-gray-500 dark:text-zinc-400 mb-1">Total Problems</div>
      <div class="text-2xl font-bold text-gray-900 dark:text-white"><%= @app.problems.count %></div>
    </div>
    <div class="bg-white dark:bg-zinc-800 shadow dark:shadow-zinc-700/50 rounded-lg border border-transparent dark:border-zinc-700 p-4">
      <div class="text-sm text-gray-500 dark:text-zinc-400 mb-1">Unresolved</div>
      <div class="text-2xl font-bold text-pink-600 dark:text-pink-400"><%= @app.problems.unresolved.count %></div>
    </div>
    <div class="bg-white dark:bg-zinc-800 shadow dark:shadow-zinc-700/50 rounded-lg border border-transparent dark:border-zinc-700 p-4">
      <div class="text-sm text-gray-500 dark:text-zinc-400 mb-1">Resolved</div>
      <div class="text-2xl font-bold text-emerald-600 dark:text-emerald-400"><%= @app.problems.resolved.count %></div>
    </div>
  </div>

  <%# Recent Problems %>
  <div class="bg-white dark:bg-zinc-800 shadow dark:shadow-zinc-700/50 rounded-lg border border-transparent dark:border-zinc-700 overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 dark:border-zinc-700 flex items-center justify-between">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Recent Problems</h2>
      <%= link_to app_problems_path(@app), class: "text-sm text-violet-600 dark:text-violet-400 hover:text-violet-700 dark:hover:text-violet-300 font-medium transition-colors" do %>
        View all
      <% end %>
    </div>
    <% recent_problems = @app.problems.order(last_noticed_at: :desc).limit(5) %>
    <% if recent_problems.any? %>
      <ul class="divide-y divide-gray-200 dark:divide-zinc-700">
        <% recent_problems.each do |problem| %>
          <li>
            <%= link_to app_problem_path(@app, problem), class: "block px-6 py-4 hover:bg-gray-50 dark:hover:bg-zinc-700/50 transition-colors" do %>
              <div class="flex items-center justify-between">
                <div class="min-w-0 flex-1">
                  <div class="flex items-center space-x-2">
                    <% if problem.resolved? %>
                      <span class="flex-shrink-0 w-2 h-2 rounded-full bg-emerald-500"></span>
                    <% else %>
                      <span class="flex-shrink-0 w-2 h-2 rounded-full bg-pink-500"></span>
                    <% end %>
                    <span class="font-medium text-gray-900 dark:text-white truncate"><%= problem.error_class %></span>
                  </div>
                  <p class="text-sm text-gray-600 dark:text-zinc-400 truncate mt-1"><%= problem.error_message %></p>
                </div>
                <div class="flex items-center space-x-4 ml-4">
                  <span class="text-sm text-gray-500 dark:text-zinc-500"><%= problem.notices_count %> notices</span>
                  <span class="text-sm text-gray-500 dark:text-zinc-500"><%= time_ago_in_words(problem.last_noticed_at) %> ago</span>
                  <svg class="w-5 h-5 text-gray-400 dark:text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="px-6 py-12 text-center">
        <div class="w-12 h-12 bg-emerald-100 dark:bg-emerald-500/20 rounded-full flex items-center justify-center mx-auto mb-3">
          <svg class="w-6 h-6 text-emerald-600 dark:text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
        <h3 class="text-base font-medium text-gray-900 dark:text-white mb-1">No problems yet</h3>
        <p class="text-sm text-gray-600 dark:text-zinc-400">Errors from this app will appear here.</p>
      </div>
    <% end %>
  </div>
</div>
