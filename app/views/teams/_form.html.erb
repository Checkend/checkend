<%= form_with model: team, data: { turbo_frame: "_top" }, class: "flex flex-col h-full" do |form| %>
  <%# Scrollable form content %>
  <div class="flex-1 overflow-y-auto px-4 py-6 sm:px-6 space-y-6">
    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-700 dark:text-zinc-300 mb-1.5" %>
      <%= form.text_field :name,
          required: true,
          autofocus: true,
          placeholder: "Engineering Team",
          class: "block w-full px-3 py-2 bg-white dark:bg-zinc-900 border rounded-lg text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-zinc-500 focus:outline-none focus:ring-1 transition-colors #{form.has_error_on(:name) ? 'border-pink-500 focus:border-pink-500 focus:ring-pink-500' : 'border-gray-300 dark:border-zinc-700 focus:border-violet-500 focus:ring-violet-500'}" %>
      <%= form.errors_on(:name) %>
    </div>
  </div>

  <%# Sticky footer with action buttons %>
  <div class="flex-shrink-0 flex items-center justify-end space-x-3 px-4 py-4 sm:px-6 border-t border-gray-200 dark:border-zinc-700 bg-gray-50 dark:bg-zinc-800/50">
    <button type="button"
            @click="slideOverOpen = false"
            class="px-4 py-2 text-gray-700 dark:text-zinc-300 hover:text-gray-900 dark:hover:text-white font-medium transition-colors">
      Cancel
    </button>
    <%= form.submit class: "px-4 py-2 bg-violet-600 text-white rounded-lg font-medium hover:bg-violet-500 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:ring-offset-2 dark:focus:ring-offset-zinc-900 transition-colors cursor-pointer" %>
  </div>
<% end %>

