<%# Sidebar navigation - shared between mobile and desktop %>
<div class="flex h-16 shrink-0 items-center">
  <%= link_to root_path, class: "text-gray-900 dark:text-white hover:text-violet-600 dark:hover:text-violet-400 transition-colors" do %>
    <%= render "shared/logo", size: :sm, show_text: true %>
  <% end %>
</div>

<nav class="flex flex-1 flex-col">
  <ul role="list" class="flex flex-1 flex-col gap-y-4">
    <%# Main navigation %>
    <li>
      <div class="text-xs font-semibold text-gray-400 dark:text-zinc-500 uppercase tracking-wider mb-2 px-2">Main</div>
      <ul role="list" class="-mx-2 space-y-1">
        <li>
          <%= link_to root_path, class: nav_link_classes(active: current_controller?("dashboard")) do %>
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true" class="<%= nav_icon_classes(active: current_controller?("dashboard")) %>">
              <path d="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            Dashboard
          <% end %>
        </li>
        <li>
          <%= link_to apps_path, class: nav_link_classes(active: current_controller?("apps")) do %>
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true" class="<%= nav_icon_classes(active: current_controller?("apps")) %>">
              <path d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            Apps
          <% end %>
        </li>
        <li>
          <%= link_to teams_path, class: nav_link_classes(active: current_controller?("teams")) do %>
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true" class="<%= nav_icon_classes(active: current_controller?("teams")) %>">
              <path d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            Teams
          <% end %>
        </li>
      </ul>
    </li>

    <%# User's apps section %>
    <% if @sidebar_apps.present? %>
      <li>
        <div class="text-xs font-semibold text-gray-400 dark:text-zinc-500 uppercase tracking-wider mb-2 px-2">Your Apps</div>
        <ul role="list" class="-mx-2 mt-2 space-y-1">
          <% @sidebar_apps.each do |app| %>
            <li>
              <%= link_to app_path(app), class: "group flex gap-x-3 rounded-md p-2 text-sm/6 font-semibold text-gray-700 dark:text-zinc-300 hover:bg-gray-100 dark:hover:bg-zinc-800 hover:text-violet-600 dark:hover:text-violet-400 transition-colors" do %>
                <span class="flex size-6 shrink-0 items-center justify-center rounded-lg border border-gray-200 dark:border-zinc-700 bg-white dark:bg-zinc-800 text-[0.625rem] font-medium text-gray-400 dark:text-zinc-500 group-hover:border-violet-600 dark:group-hover:border-violet-500 group-hover:text-violet-600 dark:group-hover:text-violet-400 transition-colors">
                  <%= app.name.first.upcase %>
                </span>
                <span class="truncate flex-1"><%= app.name %></span>
                <% unresolved = app.problems.unresolved.count %>
                <% if unresolved > 0 %>
                  <span class="inline-flex items-center justify-center px-1.5 min-w-[1.25rem] h-5 rounded-full text-xs font-medium bg-pink-100 dark:bg-pink-500/20 text-pink-700 dark:text-pink-400">
                    <%= unresolved %>
                  </span>
                <% end %>
              <% end %>
            </li>
          <% end %>
          <li>
            <%= link_to new_app_path, data: { turbo_frame: "modal" }, class: "group flex gap-x-3 rounded-md p-2 text-sm/6 font-semibold text-gray-700 dark:text-zinc-300 hover:bg-gray-100 dark:hover:bg-zinc-800 hover:text-violet-600 dark:hover:text-violet-400 transition-colors" do %>
              <span class="flex size-6 shrink-0 items-center justify-center rounded-lg border border-dashed border-gray-300 dark:border-zinc-600 text-gray-400 dark:text-zinc-500 group-hover:border-violet-600 dark:group-hover:border-violet-500 group-hover:text-violet-600 dark:group-hover:text-violet-400 transition-colors">
                <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
              </span>
              <span class="truncate">New App</span>
            <% end %>
          </li>
        </ul>
      </li>
    <% end %>

    <%# Administration section (admin-only) %>
    <% if Current.user&.site_admin? %>
      <li>
        <div class="text-xs font-semibold text-gray-400 dark:text-zinc-500 uppercase tracking-wider mb-2 px-2">Administration</div>
        <ul role="list" class="-mx-2 space-y-1">
          <li>
            <%= link_to users_path, class: nav_link_classes(active: current_controller?("users")) do %>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true" class="<%= nav_icon_classes(active: current_controller?("users")) %>">
                <path d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
              Users
            <% end %>
          </li>
          <li>
            <%= link_to api_keys_path, class: nav_link_classes(active: current_controller?("api_keys")) do %>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true" class="<%= nav_icon_classes(active: current_controller?("api_keys")) %>">
                <path d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
              API Keys
            <% end %>
          </li>
          <li>
            <%= link_to settings_smtp_path, class: nav_link_classes(active: current_controller?("settings/smtp")) do %>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true" class="<%= nav_icon_classes(active: current_controller?("settings/smtp")) %>">
                <path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
              Email Settings
            <% end %>
          </li>
        </ul>
      </li>
    <% end %>

    <%# Bottom section - pushed to bottom with mt-auto %>
    <li class="mt-auto">
      <%# Theme toggle %>
      <div class="-mx-2 mb-2" data-controller="theme">
        <button
          data-action="click->theme#toggle"
          class="group flex w-full gap-x-3 rounded-md p-2 text-sm/6 font-semibold text-gray-700 dark:text-zinc-300 hover:bg-gray-100 dark:hover:bg-zinc-800 hover:text-violet-600 dark:hover:text-violet-400 transition-colors focus:outline-none"
        >
          <%# Sun icon (shown in dark mode) %>
          <svg data-theme-target="darkIcon" class="size-6 shrink-0 hidden text-gray-400 dark:text-zinc-500 group-hover:text-violet-600 dark:group-hover:text-violet-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <%# Moon icon (shown in light mode) %>
          <svg data-theme-target="lightIcon" class="size-6 shrink-0 text-gray-400 dark:text-zinc-500 group-hover:text-violet-600 dark:group-hover:text-violet-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
          </svg>
          <span data-theme-target="lightIcon">Dark mode</span>
          <span data-theme-target="darkIcon" class="hidden">Light mode</span>
        </button>
      </div>

      <div class="border-t border-gray-200 dark:border-zinc-700 -mx-2 pt-2 pb-5">
        <%# User dropdown menu %>
        <div class="relative" x-data="{ open: false }">
          <button
            @click="open = !open"
            @click.away="open = false"
            class="group flex w-full items-center gap-3 px-2 py-3 rounded-md hover:bg-gray-100 dark:hover:bg-zinc-800 transition-colors"
          >
            <% initials = Current.user.email_address.first(2).upcase %>
            <span class="inline-flex size-9 items-center justify-center rounded-full bg-violet-600 group-hover:bg-violet-500 transition-colors">
              <span class="text-sm font-medium text-white"><%= initials %></span>
            </span>
            <div class="min-w-0 flex-1 text-left">
              <p class="text-xs font-medium text-gray-500 dark:text-zinc-500">Signed in as</p>
              <p class="text-sm font-semibold text-gray-900 dark:text-white truncate group-hover:text-violet-600 dark:group-hover:text-violet-400 transition-colors"><%= Current.user.email_address %></p>
            </div>
            <svg class="size-5 shrink-0 text-gray-400 dark:text-zinc-500 group-hover:text-violet-600 dark:group-hover:text-violet-400 transition-transform" :class="{ '-rotate-90': open }" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
            </svg>
          </button>

          <%# Dropdown menu %>
          <div
            x-show="open"
            x-transition:enter="transition ease-out duration-100"
            x-transition:enter-start="opacity-0 scale-95"
            x-transition:enter-end="opacity-100 scale-100"
            x-transition:leave="transition ease-in duration-75"
            x-transition:leave-start="opacity-100 scale-100"
            x-transition:leave-end="opacity-0 scale-95"
            class="absolute bottom-full left-0 right-0 mb-2 rounded-lg bg-white dark:bg-zinc-800 shadow-lg ring-1 ring-gray-200 dark:ring-zinc-700 overflow-hidden"
            style="display: none;"
          >
            <%= link_to settings_profile_path, class: "flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-700 dark:text-zinc-300 hover:bg-gray-100 dark:hover:bg-zinc-700 hover:text-violet-600 dark:hover:text-violet-400 transition-colors" do %>
              <svg class="size-5 text-gray-400 dark:text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.325.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 0 1 1.37.49l1.296 2.247a1.125 1.125 0 0 1-.26 1.431l-1.003.827c-.293.241-.438.613-.43.992a7.723 7.723 0 0 1 0 .255c-.008.378.137.75.43.991l1.004.827c.424.35.534.955.26 1.43l-1.298 2.247a1.125 1.125 0 0 1-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.47 6.47 0 0 1-.22.128c-.331.183-.581.495-.644.869l-.213 1.281c-.09.543-.56.94-1.11.94h-2.594c-.55 0-1.019-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 0 1-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 0 1-1.369-.49l-1.297-2.247a1.125 1.125 0 0 1 .26-1.431l1.004-.827c.292-.24.437-.613.43-.991a6.932 6.932 0 0 1 0-.255c.007-.38-.138-.751-.43-.992l-1.004-.827a1.125 1.125 0 0 1-.26-1.43l1.297-2.247a1.125 1.125 0 0 1 1.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.086.22-.128.332-.183.582-.495.644-.869l.214-1.28Z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
              </svg>
              Settings
            <% end %>
            <%= button_to session_path, method: :delete, class: "flex w-full items-center gap-3 px-3 py-2 text-sm font-medium text-gray-700 dark:text-zinc-300 hover:bg-gray-100 dark:hover:bg-zinc-700 hover:text-violet-600 dark:hover:text-violet-400 transition-colors" do %>
              <svg class="size-5 text-gray-400 dark:text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15M12 9l-3 3m0 0l3 3m-3-3h12.75" />
              </svg>
              Logout
            <% end %>
          </div>
        </div>
      </div>
    </li>
  </ul>
</nav>
