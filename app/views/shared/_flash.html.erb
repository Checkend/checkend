<%= turbo_frame_tag "flash" do %>
  <div data-controller="flash-message" class="fixed top-4 left-1/2 transform -translate-x-1/2 z-50 w-full max-w-md px-4">
    <% flash.each do |type, message| %>
      <%
        # Map flash types to styling
        styles = case type.to_s
        when "notice", "success"
          {
            bg: "bg-emerald-500/10",
            border: "border-emerald-500/30",
            text: "text-emerald-400"
          }
        when "alert", "error"
          {
            bg: "bg-pink-500/10",
            border: "border-pink-500/30",
            text: "text-pink-400"
          }
        when "warning"
          {
            bg: "bg-orange-400/10",
            border: "border-orange-400/30",
            text: "text-orange-400"
          }
        else # info or other
          {
            bg: "bg-violet-500/10",
            border: "border-violet-500/30",
            text: "text-violet-400"
          }
        end
      %>
      <div data-flash-message-target="message"
           data-type="<%= type %>"
           class="mb-2 px-4 py-3 rounded-lg border flex items-center gap-3 transition-opacity duration-300 bg-zinc-900/90 backdrop-blur-sm <%= styles[:border] %> <%= styles[:text] %>">
        <%# Type-specific icon %>
        <% case type.to_s %>
        <% when "notice", "success" %>
          <svg class="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
          </svg>
        <% when "alert", "error" %>
          <svg class="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
          </svg>
        <% when "warning" %>
          <svg class="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126ZM12 15.75h.007v.008H12v-.008Z" />
          </svg>
        <% else %>
          <svg class="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z" />
          </svg>
        <% end %>

        <%# Message text %>
        <span class="flex-1 text-sm font-medium"><%= message %></span>

        <%# Dismiss button %>
        <button type="button"
                data-action="flash-message#dismiss"
                class="flex-shrink-0 opacity-70 hover:opacity-100 transition-opacity">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    <% end %>
  </div>
<% end %>
