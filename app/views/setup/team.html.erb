<%= render 'step_indicator', current_step: 2 %>

<h1 class="text-xl font-semibold text-white mb-2">Create Your Team</h1>
<p class="text-zinc-400 text-sm mb-6">Teams help organize access to your apps. You can invite team members later.</p>

<%= form_with model: @team, url: setup_create_team_path, class: "space-y-5" do |form| %>
  <div>
    <%= form.label :name, "Team name", class: "block text-sm font-medium text-zinc-300 mb-1.5" %>
    <div class="relative">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <svg class="w-5 h-5 text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
      </div>
      <%= form.text_field :name,
          required: true,
          autofocus: true,
          placeholder: "Engineering Team",
          class: "block w-full pl-10 pr-3 py-2 bg-zinc-900 border border-zinc-700 rounded text-white placeholder-zinc-500 focus:outline-none focus:border-violet-500 focus:ring-1 focus:ring-violet-500 transition-colors" %>
    </div>
    <% if @team.errors[:name].any? %>
      <p class="mt-1 text-sm text-pink-400"><%= @team.errors[:name].first %></p>
    <% end %>
  </div>

  <div class="flex items-center justify-between pt-2">
    <%= link_to setup_path, class: "text-sm text-zinc-400 hover:text-violet-400 transition-colors" do %>
      &larr; Back
    <% end %>
    <%= form.submit "Create Team",
        class: "px-4 py-2 bg-violet-600 text-white rounded font-medium hover:bg-violet-500 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:ring-offset-2 focus:ring-offset-zinc-800 transition-colors cursor-pointer" %>
  </div>
<% end %>
