---
import '../styles/global.css'
import ThemeToggle from '../components/ThemeToggle.astro'
import Logo from '../components/Logo.astro'
import { navigation } from '../config/navigation'

interface Props {
  title: string
  description?: string
}

const { title, description = 'Checkend Documentation' } = Astro.props
const currentPath = Astro.url.pathname
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} - Checkend Docs</title>
    <script is:inline>
      const theme = localStorage.getItem('theme');
      if (theme === 'light') {
        document.documentElement.classList.add('light');
      } else {
        document.documentElement.classList.remove('light');
      }
    </script>
  </head>
  <body class="bg-zinc-900 text-zinc-100 antialiased light:bg-white light:text-gray-900">
    <!-- Header -->
    <header class="fixed top-0 z-50 w-full border-b border-zinc-800 bg-zinc-900/80 backdrop-blur-sm light:border-gray-200 light:bg-white/80">
      <div class="flex h-14 items-center justify-between px-4 lg:px-8">
        <div class="flex items-center gap-8">
          <a href="/">
            <Logo size="sm" />
          </a>
          <nav class="hidden md:flex items-center gap-6">
            <a href="/docs" class="text-sm text-zinc-400 hover:text-white light:text-gray-600 light:hover:text-gray-900">Docs</a>
            <a
              href="https://github.com/furvur/checkend"
              class="text-sm text-zinc-400 hover:text-white light:text-gray-600 light:hover:text-gray-900"
              target="_blank"
              rel="noopener noreferrer"
            >
              GitHub
            </a>
          </nav>
        </div>
        <div class="flex items-center gap-4">
          <ThemeToggle />
        </div>
      </div>
    </header>

    <div class="flex pt-14">
      <!-- Sidebar -->
      <aside class="fixed left-0 top-14 z-40 hidden h-[calc(100vh-3.5rem)] w-64 overflow-y-auto border-r border-zinc-800 bg-zinc-900 px-4 py-8 lg:block light:border-gray-200 light:bg-white">
        <nav class="space-y-8">
          {navigation.map((group) => (
            <div>
              <h3 class="mb-3 text-xs font-semibold uppercase tracking-wider text-zinc-500 light:text-gray-400">
                {group.title}
              </h3>
              <ul class="space-y-1">
                {group.items.map((item) => {
                  const isActive = currentPath === item.href || currentPath === item.href + '/'
                  return (
                    <li>
                      <a
                        href={item.href}
                        class:list={[
                          'block rounded-md px-3 py-2 text-sm transition-colors',
                          isActive
                            ? 'bg-violet-600/20 text-violet-400 font-medium'
                            : 'text-zinc-400 hover:bg-zinc-800 hover:text-white light:text-gray-600 light:hover:bg-gray-100 light:hover:text-gray-900',
                        ]}
                      >
                        {item.title}
                      </a>
                    </li>
                  )
                })}
              </ul>
            </div>
          ))}
        </nav>
      </aside>

      <!-- Mobile sidebar toggle -->
      <div class="fixed bottom-4 right-4 z-50 lg:hidden">
        <button
          id="mobile-menu-toggle"
          class="rounded-full bg-violet-600 p-3 text-white shadow-lg hover:bg-violet-700"
          aria-label="Toggle menu"
        >
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>

      <!-- Mobile sidebar overlay -->
      <div id="mobile-menu-overlay" class="fixed inset-0 z-40 hidden bg-black/50 lg:hidden"></div>

      <!-- Mobile sidebar -->
      <aside id="mobile-menu" class="fixed left-0 top-14 z-40 hidden h-[calc(100vh-3.5rem)] w-64 overflow-y-auto border-r border-zinc-800 bg-zinc-900 px-4 py-8 lg:hidden light:border-gray-200 light:bg-white">
        <nav class="space-y-8">
          {navigation.map((group) => (
            <div>
              <h3 class="mb-3 text-xs font-semibold uppercase tracking-wider text-zinc-500 light:text-gray-400">
                {group.title}
              </h3>
              <ul class="space-y-1">
                {group.items.map((item) => {
                  const isActive = currentPath === item.href || currentPath === item.href + '/'
                  return (
                    <li>
                      <a
                        href={item.href}
                        class:list={[
                          'block rounded-md px-3 py-2 text-sm transition-colors',
                          isActive
                            ? 'bg-violet-600/20 text-violet-400 font-medium'
                            : 'text-zinc-400 hover:bg-zinc-800 hover:text-white light:text-gray-600 light:hover:bg-gray-100 light:hover:text-gray-900',
                        ]}
                      >
                        {item.title}
                      </a>
                    </li>
                  )
                })}
              </ul>
            </div>
          ))}
        </nav>
      </aside>

      <!-- Main content -->
      <main class="min-h-[calc(100vh-3.5rem)] flex-1 lg:pl-64">
        <div class="mx-auto max-w-3xl px-4 py-12 lg:px-8 lg:py-16">
          <slot />
        </div>
      </main>
    </div>

    <script>
      const toggle = document.getElementById('mobile-menu-toggle');
      const menu = document.getElementById('mobile-menu');
      const overlay = document.getElementById('mobile-menu-overlay');

      function openMenu() {
        menu?.classList.remove('hidden');
        overlay?.classList.remove('hidden');
      }

      function closeMenu() {
        menu?.classList.add('hidden');
        overlay?.classList.add('hidden');
      }

      toggle?.addEventListener('click', () => {
        if (menu?.classList.contains('hidden')) {
          openMenu();
        } else {
          closeMenu();
        }
      });

      overlay?.addEventListener('click', closeMenu);
    </script>
  </body>
</html>
