---
interface Props {
  class?: string
  size?: 'sm' | 'md' | 'lg'
  showText?: boolean
}

const { class: className = '', size = 'md', showText = true } = Astro.props

const sizes = {
  sm: 'h-6 w-6',
  md: 'h-8 w-8',
  lg: 'h-10 w-10',
}

const textSizes = {
  sm: 'text-lg',
  md: 'text-xl',
  lg: 'text-2xl',
}
---

<div class={`flex items-center gap-2 ${className}`}>
  <svg viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg" class={sizes[size]}>
    <rect width="32" height="32" rx="8" fill="#7c3aed"/>
    <path d="M24 16a8 8 0 01-8 8 8 8 0 01-8-8 8 8 0 018-8 8 8 0 015.66 2.34" stroke="white" stroke-width="2.5" stroke-linecap="round"/>
    <circle cx="22" cy="10" r="2.5" fill="white"/>
  </svg>
  {showText && (
    <span class={`font-bold text-violet-400 ${textSizes[size]}`}>Checkend</span>
  )}
</div>
