---
interface Props {
  type?: 'info' | 'warning' | 'error' | 'success'
  title?: string
}

const { type = 'info', title } = Astro.props

const styles = {
  info: 'border-violet-500/30 bg-violet-500/10 text-violet-400',
  warning: 'border-orange-400/30 bg-orange-400/10 text-orange-400',
  error: 'border-pink-500/30 bg-pink-500/10 text-pink-400',
  success: 'border-emerald-500/30 bg-emerald-500/10 text-emerald-400',
}

const icons = {
  info: 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
  warning: 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z',
  error: 'M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z',
  success: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z',
}
---

<div class={`my-6 rounded-lg border p-4 ${styles[type]}`}>
  <div class="flex gap-3">
    <svg class="h-5 w-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icons[type]} />
    </svg>
    <div class="flex-1">
      {title && <p class="mb-1 font-medium">{title}</p>}
      <div class="text-sm opacity-90">
        <slot />
      </div>
    </div>
  </div>
</div>
